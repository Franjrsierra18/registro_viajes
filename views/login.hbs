<div class="row">
  <div class="col-md-5 offset-md-3">
    <div class="card">
      <div class="card-body">
        <form action="/users/login" method="post">
          <h1>LOGIN</h1>
          <div class="form-goup mb-2">
            <input class="form-control" type="text" name="usuario" placeholder="Usuario o Email">
          </div>
          <div class="form-goup mb-2">
            <input class="form-control" type="text" name="password" placeholder="Contraseña">
          </div>
          <button class="btn btn-primary mb-2" type="submit">Enviar</button>
          <h6><a href="/email">¿No recuerdas tu contraseña?</a></h6>
          <h6>{{message}}</h6>
        </form>
      </div>
    </div>
  </div>
</div>